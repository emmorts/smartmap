  "version": "0.2.0",
  "configurations": [
		{
      "name": "Mocha Tests",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/ts-mocha/bin/ts-mocha",
      "args": [
					"--paths",
					"--timeout",
          "999999",
          "--colors",
          "${workspaceFolder}/tests/**/*.spec.ts",
          "--grep",
          "should iterate through the map with multiple indices"
      ],
      "internalConsoleOptions": "openOnSessionStart"
		}
  ]
}